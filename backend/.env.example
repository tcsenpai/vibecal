# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vibecal
DB_USER=postgres
DB_PASSWORD=vibecal_secure_password_change_this

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# JWT Configuration - MUST be changed for production
JWT_SECRET=generate-a-secure-32-character-minimum-secret-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security Configuration
RATE_LIMIT_MAX=100
ENABLE_FILE_LOGGING=false
LOG_LEVEL=info
LOG_DB_QUERIES=false

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@vibecal.com

# Production overrides (uncomment for production)
# NODE_ENV=production
# DB_SSL=true
# ENABLE_FILE_LOGGING=true
# LOG_LEVEL=warn
# RATE_LIMIT_MAX=50

# Test Configuration (for testing only)
